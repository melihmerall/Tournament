</div>

<script src="script.js"></script>
 
        <script>
    
    const sikayetListesi = [
        { id: 1, tarih: "2023-01-05", saat: "18:33", sonuc: "Weird issue with the color f7f7f7?" },
        { id: 2, tarih: "2023-01-06", saat: "09:10", sonuc: "Same problem" },
        
    ];

  
    function createSikayetListesi() {
        const liste = document.querySelector(".card-list");
        sikayetListesi.forEach((sikayet) => {
            const card = document.createElement("div");
            card.classList.add("card");

            const cardHeader = document.createElement("div");
            cardHeader.classList.add("card-header");
            cardHeader.textContent = `Şikayet No: ${sikayet.id}`;

            const cardBody = document.createElement("div");
            cardBody.classList.add("card-body");
            cardBody.innerHTML = `
                <p>Tarih: ${sikayet.tarih}</p>
                <p>Saat: ${sikayet.saat}</p>
                <p>Sonuç: ${sikayet.sonuc}</p>
            `;

            const cardFooter = document.createElement("div");
            cardFooter.classList.add("card-footer");
            cardFooter.textContent = "Detaylı Bilgi";

            card.appendChild(cardHeader);
            card.appendChild(cardBody);
            card.appendChild(cardFooter);

            liste.appendChild(card);
        });
    }

   
    createSikayetListesi();
        </script>