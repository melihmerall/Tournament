<div class="content">
    <div class="navbav1">
        <button onclick="showSection('muvafakatname')">Muvafakatname</button>
        <button onclick="showSection('takimBilgileri')">Takım Bilgileri</button>
        <button onclick="showSection('takimUyeleri')">Takım Üyeleri</button>
        <button onclick="showSection('odemeBilgileri')">Ödeme Bilgileri</button>
        <button onclick="showSection('dekont')">Dekont</button>
    </div>
    <div id="muvafakatname" class="hidden active">
        <h2>Muvafakatname</h2>
        <iframe src="path/to/muvafakatname.pdf" width="100%" height="500px"></iframe>
        <button onclick="downloadPDF('path/to/muvafakatname.pdf')">PDF İndir</button>
        <button type="button" onclick="nextSection('takimBilgileri')">Devam Et</button>
    </div>
    <div id="takimBilgileri" class="hidden">
        <h2>Takım Bilgileri</h2>
        <form>
            <label for="teamName">Takım Adı:</label>
            <input type="text" id="teamName" required><br>

            <label for="teamInstitution">Kurum Adı:</label>
            <input type="text" id="teamInstitution" required><br>

            <label for="teamEmail">E-Posta:</label>
            <input type="email" id="teamEmail" required><br>

            <label for="contactNumber">İrtibat Numarası:</label>
            <input type="tel" id="contactNumber" required pattern="\d{3}-\d{3}-\d{2}-\d{2}"><br>

            <label for="documentUpload">Kurumsal Evrak:</label>
            <input type="file" id="documentUpload" accept="application/pdf"><br>

            <button type="button" onclick="nextSection('takimUyeleri')">Devam Et</button>
        </form>
    </div>
    <div id="takimUyeleri" class="hidden">
        <h2>Takım Üyeleri</h2>
        <div id="memberSection">
            <form id="memberForm">
                <label for="memberTC">TC Kimlik Numarası:</label>
                <input type="text" id="memberTC" required><br>

                <label for="memberName">Üye Adı:</label>
                <input type="text" id="memberName" required><br>

                <label for="memberSurname">Üye Soyadı:</label>
                <input type="text" id="memberSurname" required><br>

                <label for="memberPhone">Telefon Numarası:</label>
                <input type="tel" id="memberPhone" required pattern="\d{3}-\d{3}-\d{2}-\d{2}"><br>

                <label>
                    <input type="checkbox" id="teamCaptain"> Kaptan
                </label>
                <label>
                    <input type="checkbox" id="teamManager"> Yönetici
                </label><br>

                <button type="button" class="add-button" onclick="addMember()">Ekle</button>
                <button type="button" onclick="goBack('takimBilgileri')">Geri Dön</button>
                <button type="button" onclick="nextSection('odemeBilgileri')">Devam Et</button>
            </form>
            <table>
                <thead>
                    <tr>
                        <th>TC Kimlik Numarası</th>
                        <th>Üye Adı</th>
                        <th>Üye Soyadı</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody id="memberTable">
                    <!-- Üye bilgileri buraya eklenecek -->
                </tbody>
            </table>
        </div>
    </div>
    <div id="odemeBilgileri" class="hidden">
        <h2>Ödeme Bilgileri</h2>
        <form>
            <label for="senderName">Alıcı Adı:</label>
            <input type="text" id="senderName" required><br>

            <label for="bankName">Banka Adı:</label>
            <input type="text" id="bankName" required><br>

            <label for="iban">IBAN:</label>
            <input type="text" id="iban" required><br>

            <label for="paymentAmount">Ödeme Tutarı:</label>
            <input type="number" id="paymentAmount" required><br>

            <button type="button" onclick="goBack('takimUyeleri')">Geri Dön</button>
            <button type="button" onclick="nextSection('dekont')">Devam Et</button>
        </form>
    </div>
    <div id="dekont" class="hidden">
        <h2>Dekont</h2>
        <input type="file" id="receiptUpload" accept="application/pdf"><br>
        <button onclick="uploadReceipt()">Dekont Yükle</button>
        <button onclick="downloadPDF('path/to/dekont.pdf')">PDF İndir</button>
        <button type="button" onclick="nextSection('bitir')">Bitir</button>
    </div>
    <div id="bitir" class="hidden">
        <h2>İşlem Tamamlandı</h2>
        <p>İşleminiz başarıyla tamamlandı. Teşekkür ederiz!</p>
        <button onclick="goBack('dekont')">Geri Dön</button>
    </div>
</div>

<script>
    function showSection(sectionId) {
        const sections = document.querySelectorAll('.content > div');
        sections.forEach(section => {
            section.classList.add('hidden');
        });
        document.getElementById(sectionId).classList.remove('hidden');
    }

    function downloadPDF(pdfPath) {
        window.open(pdfPath, '_blank');
    }

    function nextSection(nextId) {
        const sections = document.querySelectorAll('.content > div');
        sections.forEach(section => {
            section.classList.add('hidden');
        });
        document.getElementById(nextId).classList.remove('hidden');
    }

    function goBack() {
        // Geri dönme işlemini burada tanımlayın
    }






    function showSection(sectionId) {
        const sections = document.querySelectorAll('.content > div');
        sections.forEach(section => {
            section.classList.add('hidden');
            section.classList.remove('active');
        });
        document.getElementById(sectionId).classList.remove('hidden');
        document.getElementById(sectionId).classList.add('active');
    }

    function nextSection(nextId) {
        const currentSection = document.querySelector('.content > div.active');
        currentSection.classList.add('hidden');
        currentSection.classList.remove('active');
        document.getElementById(nextId).classList.remove('hidden');
        document.getElementById(nextId).classList.add('active');
    }

    function goBack(previousId) {
        const currentSection = document.querySelector('.content > div.active');
        currentSection.classList.add('hidden');
        currentSection.classList.remove('active');
        document.getElementById(previousId).classList.remove('hidden');
        document.getElementById(previousId).classList.add('active');
    }

    function downloadPDF(url) {
        window.open(url);
    }

    function uploadReceipt() {
        const receiptInput = document.getElementById('receiptUpload');
        if (receiptInput.files.length > 0) {
            alert('Dekont yüklendi: ' + receiptInput.files[0].name);
        } else {
            alert('Lütfen bir dekont yükleyin.');
        }
    }

    function addMember() {
        const memberTC = document.getElementById('memberTC').value;
        const memberName = document.getElementById('memberName').value;
        const memberSurname = document.getElementById('memberSurname').value;
        const memberPhone = document.getElementById('memberPhone').value;
        const isCaptain = document.getElementById('teamCaptain').checked ? 'Kaptan' : '';
        const isManager = document.getElementById('teamManager').checked ? 'Yönetici' : '';

        const memberTable = document.getElementById('memberTable');
        const newRow = memberTable.insertRow(memberTable.rows.length); // Yeni satırı en alta ekle

        newRow.innerHTML = `
                <td>${memberTC}</td>
                <td>${memberName}</td>
                <td>${memberSurname}</td>
                <td>${memberPhone}</td>
                <td>${isCaptain} ${isManager}</td>
                <td><button type="button" onclick="removeMember(this)">Sil</button></td>
            `;

        // Formu temizle
        document.getElementById('memberForm').reset();
    }

    function removeMember(button) {
        const row = button.parentNode.parentNode;
        row.parentNode.removeChild(row);
    }

</script>



